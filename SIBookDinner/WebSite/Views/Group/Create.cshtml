@model Rule.Entities.group
@{
    ViewBag.Title = "新建";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新建分组</title>
    <style type="text/css">
        body {
            text-align: center;
        }

        div {
            width: 500px;
            margin: 0 auto;
            text-align: center;
        }
    </style>
</head>
<body>
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <h2>新建分组</h2>

    @using (Ajax.BeginForm("Create", new AjaxOptions()))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4> </h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-xs-3">
                    <h5><strong>分组名称</strong></h5>
                </div>
                <div class="col-xs-9" style="text-align:left;">
                    <input id="GroupName" name="GroupName" type="text" class="form-control" onchange="checkGroupName()" />
                    <span class="" id="showWarning" style="color: #B94A48;"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-3">
                    <h5><strong>备注</strong></h5>
                </div>
                <div class="col-xs-9">
                    <input id="Remark" name="Remark" type="text" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    <input type="submit" value="新建" class="btn btn-default" onclick="return cfmEnt()"/>
                    @*<input type="button" value="测试" class="btn btn-default" onclick="test();" />*@
                </div>
            </div>
        </div>
    }
    </body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    function checkGroupName() {
        if (document.getElementById("GroupName").value != "") {
            $("#showWarning").html("");
        }
        else {
            $("#showNumWarning").html("分组名称不能为空");
        }
    }

    function cfmEnt() {
        if (document.getElementById("GroupName").value == "" ) {
            $("#showWarning").html("分组名称不能为空");
            return false;
        }
        else {
            $("#showNumWarning").html("");
            //top.SetSelectVal();
        }
    }
</script>
